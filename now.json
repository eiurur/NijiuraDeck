{
  "version": 2,
  "name": "nijiuradeck",
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "packages/frontend/dist" }
    },
    { "src": "packages/backend/routes/**/*.js", "use": "@now/node" }
  ],
  "routes": [{ "src": "/", "dest": "packages/frontend/dist/index.html" }],
  "alias": "nijiuradeck"
}
